<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="550"
             x:Class="Proggy.Controls.GlobalControls">
  
  <StackPanel Orientation="Horizontal">
      <ComboBox Classes="dropdown" SelectedItem="{Binding SelectedMode}" Items="{Binding Modes}"></ComboBox>
      <Button Classes="button" IsEnabled="{Binding CanPlay}" Content="{Binding PlayButtonText}" Command="{Binding Toggle}"></Button>
      <Button Classes="button" Content="Settings" Command="{Binding Settings}"></Button>
  </StackPanel>

</UserControl>